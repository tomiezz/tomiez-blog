{
  "compilerOptions": {
    "noEmit": true,
    "target": "ES6",
    "module": "CommonJS",
    "allowJs": true,
    "jsx": "react",
    "strict": true,
    "removeComments": true,
    "noImplicitReturns": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "baseUrl": "./src",
    "lib": ["dom", "es5", "es6", "es7", "es2017"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", ".cache", "public"]
}
